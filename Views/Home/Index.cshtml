<section class="product-store position-relative padding-large no-padding-top">
    <div class="container">
        <h2 class="mt-2 ">Shop by Category</h2>
        <div class="row">
            @foreach (var cat in Model)
            {
                <div class="col-md-4"> 
                    <div class="card mt-3">
                        <img class="card-img-top" src="/images/@ViewBag.CategoryList[i]" style="width: 100%; height: 15vw; object-fit: cover;" />
                        <div class="card-body">
                            <h5 class="card-title">
                                @cat.Name
                            </h5>
                            <a href="@Url.Action("Products", "Home", new { categoryId = cat.EbayCategoryId })"
                                class="btn btn-primary mt-2">See Products
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

