@model IEnumerable<Category>

@{
    Layout = "_Layout";
    int i = 0;
}

<div class="container mt-2">
    <div>
        <h2 class="mt-2">Shop by Category</h2>
    </div>
    <div class="row">
        @foreach (var cat in Model)
        {
            <div class="col-md-4"> 
                <div class="card mt-3">
                    <img class="card-img-top" src="/images/@ViewBag.CategoryList[i++]" style="width: 100%; height: 15vw; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">
                            @cat.Name
                        </h5>
                        <a href="@Url.Action("Products", "Home", new { categoryId = cat.EbayCategoryId })"
                           class="btn btn-primary mt-2">See Products</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>