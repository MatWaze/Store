@model JToken

@{
    string price = Model["price"]["value"].ToString();
    string? shippingPrice = Model["shippingOptions"]?.First()?["shippingCost"]?["value"]?.ToString() ?? null;

    JToken? images = Model["additionalImages"] ?? null;
    Layout = "_Layout";
}

<div class="row">
    <!-- Card Section -->
    <div class="col-md-6" style="text-align: center;">
        <div class="card border border-grey">
            <img src="@Model["image"]["imageUrl"]" style="width: 100%; height: 35vw; object-fit: cover;" class="card-img-top border border-grey" />
            <div class="card-body">
                <h5 class="card-title" style="font-size:30px;">
                    @Model["title"]
                </h5>
                <p class="card-text" style="font-size: 25px;">
                    @Model["condition"]
                </p>
                <p class="card-text" style="font-size: 25px;">
                    Price: $@price
                </p>
                @if (shippingPrice != null)
                {
                    <p class="card-text" style="font-size: 25px;">
                        Shipping: $@shippingPrice
                    </p>
                }
                <h3 class="card-text" style="font-size: 25px;">
                    Available: @(Model["estimatedAvailabilities"]?.First()["estimatedAvailableQuantity"] ?? "None")
                </h3>
                <a href="@Url.Action("Search", "Ebay")" class="btn btn-primary">
                    Go Back
                </a>
                <form id="@Model["itemId"].ToString()" asp-page="/Cart/Cart" method="post">
                    <input type="hidden" name="ebayProductId" value="@Model["itemId"].ToString()" /> 
                    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" /> 
                    @if (Model["estimatedAvailabilities"]?.FirstOrDefault() != null) 
                    { 
                        <button type="submit" class="btn btn-success pull-right mt-2"> 
                            Add To Cart 
                        </button> 
                    } 
                    else 
                    { 
                        <button disabled class="btn btn-success pull-right mt-2"> 
                            Add To Cart 
                        </button> 
                    } 
                </form>
            </div>
        </div>
    </div>

    <!-- Carousel Section -->
    <div class="col-md-6">
        @if (images != null)
        {
        <div id="carouselExampleSlidesOnly" class="carousel slide border border-grey" data-bs-ride="carousel">
            <div class="carousel-inner">
                @foreach (var image in images)
                {
                var isActive = image == images.First() ? "active" : ""; // Add active class to the first item
                <div class="carousel-item @isActive">
                    <img class="d-block w-100" src="@image["imageUrl"]">
                </div>
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleSlidesOnly" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon bg-dark rounded-circle p-3" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleSlidesOnly" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon bg-dark rounded-circle p-3" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </a>
        </div>
        }
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>
<style>
    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-color: black; /* Make the icons more visible */
        width: 40px; /* Increase icon size */
        height: 40px; /* Increase icon size */
    }

</style>